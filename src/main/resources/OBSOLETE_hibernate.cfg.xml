<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<!-- Database connection settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://fog.av.it.pt:3306/csb</property>
        <property name="hibernate.connection.username">csb</property>
        <property name="hibernate.connection.password">csb</property>
        
        
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        
        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        
        <mapping class="pt.it.av.atnog.csb.model.Platform"></mapping>
        <mapping class="pt.it.av.atnog.csb.model.Provider"></mapping>
        <mapping class="pt.it.av.atnog.csb.model.App"></mapping>
    </session-factory>
</hibernate-configuration>
